% % Headings
\ newcommand { \ lecture } [4] {
   \ pagestyle {myheadings}
   \ thispagestyle {plain}
   \nouvelle page
   \ setcounter {page} {1}
   \ noindent
   \ begin { center }
   \ framebox {
      \ vbox { \ vspace {2mm}
    \ hbox à 6,28 pouces {{ \ bf # 1 \ hfill }}
       \ vspace {6mm}
       \ hbox à 6,28 pouces {{ \ Large  \ hfill # 2   \ hfill }}
       \ vspace {6mm}
       \ hbox à 6.28in {{ \ it Cours: # 3 \ hfill Scribes: # 4}}
      \ vspace {2mm}}
   }
   \ end { centre }
   \ markboth {# 1} {# 1}
   \ vspace * {4mm}
}

